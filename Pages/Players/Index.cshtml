@page
@model IndexModel
@{
}
<div class="jumbotron p-2">
    <h1><img src="~/image/nfl/nfl.png" />Players</h1>
    <form>
        <h3>
            <label asp-for="SearchTeam">
                Team:
            </label>
            <select class="p-2" asp-for="SearchTeam" onchange="this.form.submit();">
                @foreach(Team team in Model.Teams)
                {
                    <option value="@team.TeamId">@team.TeamId</option>
                }
            </select>
            <label asp-for="SearchPosition">
                Position:
            </label>
            <select class="p-2" asp-for="SearchPosition" asp-items="Model.Positions" onchange="this.form.submit();">
                <option value="">ALL</option>
            </select>
            <label asp-for="SortString" class="control-label">
                Sort By:
            </label>
            <select class="p-2" asp-for="SortString" onchange="this.form.submit();">
                <option value="Number">Number</option>
                <option value="Name">Name</option>
                <option value="Position">Position</option>
            </select>
        </h3>
    </form>
</div>

<div class="d-flex bg-primary text-white">
    <div class="p-1" style="flex:0 0 10%">Team</div>
    <div class="p-1" style="flex:0 0 10%">Number</div>
    <div class="p-1" style="flex:0 0 25%">Name</div>
    <div class="p-1" style="flex:0 0 10%">Position</div>
    <div class="p-1" style="flex:0 0 20%">Experience</div>
    <div class="p-1" style="flex:0 0 25%">College</div>
</div>

@foreach (Player player in Model.Players)
{
    <a class="links" asp-page="./Player" asp-route-PlayerId="@player.PlayerId">
        <div class="d-flex text-black-50">
            <div class="p-1" style="flex:0 0 10%">@Model.FindTeam(player.TeamId)</div>
            <div class="p-1" style="flex:0 0 10%">@player.Number</div>
            <div class="p-1" style="flex:0 0 25%">@player.Name</div>
            <div class="p-1" style="flex:0 0 10%">@player.Position</div>
            <div class="p-1" style="flex:0 0 20%">@player.Experience</div>
            <div class="p-1" style="flex:0 0 25%">@player.College</div>
        </div>
    </a>
}
